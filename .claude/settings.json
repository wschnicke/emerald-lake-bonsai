  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__linear-server__create_comment",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are verifying a Linear comment is about to be posted. The comment body is in $ARGUMENTS.\n\nCheck if the comment body includes clear attribution indicating it was created by Claude Code (e.g., a footer like '---\\n*Posted by Claude Code*' or similar).\n\nIf attribution is present: respond with 'APPROVED'\nIf attribution is missing: respond with 'BLOCKED: Linear comments must include clear attribution. Add a footer like \"---\\n*Posted by Claude Code*\" to the comment body.'",
            "statusMessage": "Verifying Linear comment attribution..."
          }
        ]
      },
      {
        "matcher": "Bash(gh pr comment:*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are verifying a GitHub PR comment is about to be posted. The command is in $ARGUMENTS.\n\nCheck if the comment includes clear attribution indicating it was created by Claude Code (e.g., '---\\n*Posted by Claude Code*' or similar at the end).\n\nIf attribution is present: respond with 'APPROVED'\nIf attribution is missing: respond with 'BLOCKED: GitHub comments must include clear attribution. Add \"---\\n*Posted by Claude Code*\" to the comment text.'",
            "statusMessage": "Verifying GitHub PR comment attribution..."
          }
        ]
      },
      {
        "matcher": "Bash(gh issue comment:*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are verifying a GitHub issue comment is about to be posted. The command is in $ARGUMENTS.\n\nCheck if the comment includes clear attribution indicating it was created by Claude Code (e.g., '---\\n*Posted by Claude Code*' or similar at the end).\n\nIf attribution is present: respond with 'APPROVED'\nIf attribution is missing: respond with 'BLOCKED: GitHub comments must include clear attribution. Add \"---\\n*Posted by Claude Code*\" to the comment text.'",
            "statusMessage": "Verifying GitHub issue comment attribution..."
          }
        ]
      },
      {
        "matcher": "Bash(gh pr review:*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are verifying a GitHub PR review is about to be posted. The command is in $ARGUMENTS.\n\nCheck if the review body includes clear attribution indicating it was created by Claude Code (e.g., '---\\n*Posted by Claude Code*' or similar at the end).\n\nIf attribution is present: respond with 'APPROVED'\nIf attribution is missing: respond with 'BLOCKED: GitHub PR reviews must include clear attribution. Add \"---\\n*Posted by Claude Code*\" to the review body.'",
            "statusMessage": "Verifying GitHub PR review attribution..."
          }
        ]
      },
      {
        "matcher": "Bash(gh pr create:*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are verifying a GitHub PR is about to be created. The command is in $ARGUMENTS.\n\nCheck if the PR body/description includes clear attribution indicating it was created by Claude Code (e.g., '---\\n*Created by Claude Code*' or similar at the end).\n\nNote: The PR body is already configured to have empty attribution via settings, so if there's NO attribution footer, that's acceptable and you should respond with 'APPROVED'.\n\nOnly block if someone is trying to override the empty attribution setting.",
            "statusMessage": "Verifying GitHub PR attribution..."
          }
        ]
      },
      {
        "matcher": "Bash(gh api*comments*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are verifying a GitHub API call that creates or modifies comments. The command is in $ARGUMENTS.\n\nCheck if the API call includes a comment body with clear attribution indicating it was created by Claude Code (e.g., '---\\n*Posted by Claude Code*' or similar).\n\nIf attribution is present or this is a GET/read operation: respond with 'APPROVED'\nIf this is a POST/PATCH creating a comment without attribution: respond with 'BLOCKED: GitHub comments via API must include clear attribution. Add \"---\\n*Posted by Claude Code*\" to the comment body.'",
            "statusMessage": "Verifying GitHub API comment attribution..."
          }
        ]
      },
      {
        "matcher": "Bash(gh api*reviews*)",
        "hooks": [
          {
            "type": "prompt",
            "prompt": "You are verifying a GitHub API call that creates or modifies reviews. The command is in $ARGUMENTS.\n\nCheck if the API call includes a review body with clear attribution indicating it was created by Claude Code (e.g., '---\\n*Posted by Claude Code*' or similar).\n\nIf attribution is present or this is a GET/read operation: respond with 'APPROVED'\nIf this is a POST/PATCH creating a review without attribution: respond with 'BLOCKED: GitHub reviews via API must include clear attribution. Add \"---\\n*Posted by Claude Code*\" to the review body.'",
            "statusMessage": "Verifying GitHub API review attribution..."
          }
        ]
      }
    ]
  },
